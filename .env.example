# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=solar_platform
DB_USER=postgres
DB_PASSWORD=postgres
DB_POOL_MIN=5
DB_POOL_MAX=20

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRY=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRY=30d

# MQTT
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=iot_user
MQTT_PASSWORD=iot_password
MQTT_TOPIC_PREFIX=energy/

# Email Service
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=

# SMS Service
SMS_SERVICE=twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Payment Gateway
PAYMENT_GATEWAY=razorpay

# Razorpay Configuration
# Get keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# Stripe Configuration (optional)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# Weather API
WEATHER_API_KEY=
WEATHER_API_ENDPOINT=https://api.openweathermap.org/data/2.5/forecast

# ML Services
ML_SERVICE_URL=http://localhost:8001
ML_SERVICE_TIMEOUT=30000
ML_SERVICE_RETRIES=3
ML_SERVICE_ENABLED=true

# Optimization Service
OPTIMIZATION_SERVICE_URL=http://localhost:8002

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Sentry (Error Tracking)
SENTRY_DSN=

# Admin
ADMIN_EMAIL=admin@solarsharingplatform.com
ADMIN_PASSWORD=
